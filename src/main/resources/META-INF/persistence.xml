<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<!-- JDO tutorial "unit" -->
	<persistence-unit name="Tutorial">
		<properties>
			<property name="javax.jdo.option.ConnectionURL" value="jdbc:sqlite:test.db" />
			<property name="javax.jdo.option.ConnectionDriverName"
				value="org.sqlite.JDBC" />
			<property name="javax.jdo.option.ConnectionUserName" value="" />
			<property name="javax.jdo.option.ConnectionPassword" value="" />
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="datanucleus.schema.validateTables" value="false" />
			<property name="datanucleus.schema.validateConstraints"
				value="false" />
				
			<property name="datanucleus.ConnectionDriverName" value="org.sqlite.JDBC" />
			<property name="datanucleus.ConnectionURL" value="jdbc:sqlite:test.db" />
			
		
				
		</properties>
	</persistence-unit>
</persistence>